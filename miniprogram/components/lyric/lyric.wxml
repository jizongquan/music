<scroll-view hidden="{{isLyricShow}}" scroll-with-animation="true" scroll-y="true" class="lyric-scroll" scroll-top="scrollTop">
  <view class="lyric-panel">
    <block wx:for="{{lrcList}}" wx:key="item">
      <view class="lyric {{index == nowLyricIndex ?'hightlight-lyric':''}}">{{item.lrc}}</view>
    </block>
  </view>
</scroll-view>
